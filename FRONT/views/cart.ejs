<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script nonce="<%- cspNonce %>" src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <title>Document</title>
    <script nonce="<%- cspNonce %>">
        document.addEventListener('DOMContentLoaded', function() {
            const cartList = document.getElementById('cart-list');
            const cart = JSON.parse(sessionStorage.getItem('cart'));
            console.log(cart)
            if (cart) {
                for (let product of cart) {
                    const li = document.createElement('li');
                    const price = document.createElement('p');
                    price.textContent = product.price;
                    li.appendChild(price);
                    const libelle = document.createElement('p');
                    libelle.textContent = product.libelle;
                    li.appendChild(libelle);
                    const category = document.createElement('p');
                    category.textContent = product.category;
                    li.appendChild(category);
                    const description = document.createElement('p');
                    description.textContent = product.description;
                    li.appendChild(description);
                    cartList.appendChild(li);
                }
            }
        });
    </script>
</head>
<body>
    <h1>Panier</h1>
    <ul id="cart-list">
        
    </ul>
</body>
</html>